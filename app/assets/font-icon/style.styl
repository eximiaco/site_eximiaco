@import "variables"

@font-face
  font-family 'icomoon'
  src url(icomoon-font-path + '/icomoon.ttf?pz0b8e') format('truetype'), url(icomoon-font-path + '/icomoon.woff?pz0b8e') format('woff'), url(icomoon-font-path + '/icomoon.svg?pz0b8e#icomoon') format('svg')
  font-weight normal
  font-style normal
  font-display block

[class^="i-"], [class*=" i-"]
  font-family 'icomoon' !important
  speak never
  font-style normal
  font-weight normal
  font-variant normal
  text-transform none
  line-height 1

