@import 'variables'

#login
    max-width 323px
    padding 0

    @media screen and ( min-width $screen-sm )
        padding 3.3% 0 0

body
    font-family $body-font

.login // @stylint ignore duplicates warning duplicate property or selector, consider merging
    background var( --color-secondary )

    label
        color $tundora

    .message
        border 2px solid $brownish-grey
        border-bottom none
        box-shadow none
        color $brownish-grey
        margin 50px auto 0
        padding 10px
        width 247px

    form
        box-shadow none
        margin-top 44px

        .forgetmenot
            margin-top 1px

            @media screen and ( min-width $screen-sm )
                margin-top 5px

    input[type='checkbox']
        &:focus
            border-color $brownish-grey
            box-shadow none

        &:checked
            &:before
                color $brownish-grey

    .submit
        .button
            font-size 13px
            height 28px
            line-height normal
            padding 0 10px
            text-align center

    h1
        display none

    .logo-header
        display block
        height 110px
        text-align center
        width 100%

        img
            margin-top 65px
            max-height 100%
            max-width 100%

    #login_error // @stylint ignore namingConvention warning preferred naming convention is BEM
        border 2px solid $punch
        border-bottom none
        box-shadow none
        margin 15px auto 0
        padding 10px
        width 247px

    #nav a,
    #backtoblog a
        color white

        &:hover
            color #f1f1f1

.input
    background $white
    border 1px solid $silver
    box-shadow none

.wp-core-ui
    .button-primary
        background $brownish-grey
        border-color $brownish-grey
        border-radius 0
        box-shadow none
        text-shadow none

        &:hover
        &:focus
            background darken( $brownish-grey, 10% )
            border-color darken( $brownish-grey, 10% )
            box-shadow none

        &:active
            background darken( $brownish-grey, 20% )
            border-color darken( $brownish-grey, 10% )
