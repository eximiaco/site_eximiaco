.home-cards
    width 100%
    background-color #f5f5f5

    &-container
        display flex
        flex-direction column
        padding-left 45px
        padding-right 45px
        margin-top 10px

        @media screen and ( min-width $screen-md )
            flex-direction row
            padding-left 10%
            padding-right 10%
            flex-wrap wrap
            justify-content center

        @media screen and ( min-width $screen-lg)
            padding-left 15%
            padding-right 15%
            flex-direction row
            flex-wrap wrap
            justify-content center

    &-card
        width 100%
        height auto
        min-height 270px
        margin-bottom 20px
        background-color white
        border-radius 15px
        padding 10px
        padding-top 20px
        display flex
        flex-direction column
        text-align center
        box-shadow 0 6px 10px 0 rgba(0,0,0,0.19)

        @media screen and ( min-width $screen-md )
            flex 0 0 34%;
            width calc( (100% - 60px) / 2 )
            margin-left 15px
            margin-right 15px
            margin-bottom 50px

        @media screen and ( min-width $screen-lg)
            flex 0 0 26%;
            width calc( (100% - 60px) / 3 )

    &-image
        margin-bottom 5px
        width 75px
        margin-right auto
        margin-left auto

        img
            width 75px
            height 75px


    &-title
        color #5b5b5f
        text-transform uppercase
        font-size 20px
        font-weight bold
        margin-bottom 10px

    &-text
        font-size 18px
        font-weight normal
        color #5b5b5f

        @media screen and ( min-width $screen-md )
            font-size 20px
