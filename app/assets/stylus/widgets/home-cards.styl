.home-cards
    background-color #f5f5f5
    width 100%

    &-container
        display flex
        justify-content space-between
        margin-left -15px
        margin-right -15px
        margin-top 10px
        flex-wrap wrap

    &-card
        background-color white
        border-radius 15px
        box-shadow 0 0 20px 0px rgba(0,0,0,0.10)
        height auto
        margin 0 40px 30px 40px
        padding 30px 40px 40px
        text-align center
        width 100%

        @media screen and ( min-width $screen-md )
            margin 0 auto 30px auto
            width calc( 50% - 30px )

        @media screen and ( min-width $screen-lg)
            width calc( 33.33% - 30px )

    &-image
        margin-bottom 5px
        width 75px
        margin-right auto
        margin-left auto

        img
            height 70px
            max-width initial

    &-title
        color #5b5b5f
        text-transform uppercase
        font-size 20px
        font-weight bold
        margin-bottom 10px

    &-text
        font-size 14px
        font-weight normal
        color #5b5b5f
