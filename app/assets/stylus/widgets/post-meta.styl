.post
    &--meta
        color $brownish-grey
        font-size 20px
        font-weight 100
        margin 12px 0 40px

        @media screen and ( min-width $screen-md )
            align-items flex-end
            display flex
            font-size 20px
            margin-top 22px

        > *
            display block
            margin-bottom 12px

            @media screen and ( min-width $screen-md )
                margin-bottom 0

        &-author
            color var-use( color-primary )
            font-weight bold
            text-decoration none

            @media screen and ( min-width $screen-md )
                margin-bottom 0

        &-translate
            text-decoration none
            color var-use( color-primary )

            @media screen and ( min-width $screen-md )
                margin-bottom 0

        &-date
            @media screen and ( min-width $screen-md )
                margin 0 60px

        &-reading
            line-height 1

        &-lang
            @media screen and ( min-width $screen-md )
                margin 0 60px

    &--icon__time
        color var-use( color-primary )
        float left
        font-size 24px
        icon( i-time )
        margin-right 10px

    &--icon__language
        color var-use( color-primary )
        float left
        font-size 24px
        icon( i-language )
        margin-right 10px
