.post
    // margin-top 70px

    &--header
        @media screen and ( min-width $screen-lg )
            padding-left 108px

    &--content
        color $black
        font-size 18px
        width 100%

        @media screen and ( min-width $screen-lg )
            margin 0 auto 40px
            width calc( 100% - 108px )

        h2
            font-size 30px

        @media screen and ( min-width $screen-md )
            text-align justify

    &--title
        font-size 32px
        line-height 1.2
        text-transform uppercase
        margin 0
        width 100%

        @media screen and ( min-width $screen-md )
            width 100%

        a
            color $black-light
            letter-spacing 4px
            text-decoration none

    &--main
        display flex
        flex-direction column

        @media screen and ( min-width $screen-lg )
            flex-direction row

.single-post,
.single-bliki
    .listing-post__serie,
    .listing-post__categories a
        font-size 14px


.post--content
    center
        figure
            margin 0px

.post--content
    center
        figure
            iframe
                @media screen and ( max-width $screen-sm )
                    width 100%
                    height 180px

.single-post,
.single-bliki
    .progress
        position fixed
        top 0
        margin-top 100px
        width 0%
        height 8px
        background #ccc

        &__bar
            height 8px
            background var-use( color-primary )
            width 0%



