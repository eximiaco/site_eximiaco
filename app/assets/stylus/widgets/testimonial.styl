.testimonial
    margin 0
    text-align center
    padding 0 10px

    &--container
        width calc( 100% - 20px )
        margin-left 15px
        margin-right 15px

        @media screen and ( min-width $screen-md )
            width calc( 100% - 30px )
            margin-left 15px
            margin-right 0px

        @media screen and ( min-width $screen-lg )
            width calc( 100% - 30px )
            margin-left 0px
            margin-right 0px

    &--image
        img
            background $white
            border 1px solid var-use( color-primary )
            border-radius 50%
            display inline-block
            height 90px
            padding 5px
            width 90px
            margin-bottom 10px

            img
                height 130px
                width 130px

    &--content
        color #6a6a6a
        font-weight normal
        letter-spacing 0.5px
        margin 0 auto
        padding 0 10px

        @media screen and ( min-width $screen-md )
            font-size 15px

    &--footer
        align-items center
        display flex
        flex-direction column
        justify-content center
        margin-top 20px

        @media screen and ( min-width $screen-md )
            align-items end
            flex-direction row

    &--company
        @media screen and ( min-width $screen-md )
            margin-right 30px
            text-align right
            width calc( 40% - 30px )

        img
            height 40px
            width 40px

    &--author
        p
            margin 0

            &:first-child
                color $brownish-grey
                font-size 12px
                font-weight 100
            &:last-child
                font-weight bold
                text-transform uppercase

        @media screen and ( min-width $screen-md )
            text-align left
            width 60%
            padding-right 10px
