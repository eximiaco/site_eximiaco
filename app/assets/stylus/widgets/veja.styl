.shortcode-veja
    border-bottom 1px solid $gray-dark
    border-top 1px solid $gray-dark
    margin 20px 10px
    padding-left 10px
    padding-top 10px

    @media screen and ( min-width $screen-md )
        margin 40px

    &__title
        font-size 22
        font-weight bold
        text-transform uppercase

    ol
    ul
        list-style none
        margin-bottom 10px
        padding-left 0

        li
            padding-left 20px
            position relative

            &:before
                background-color var( --color-primary )
                content ''
                width 6px
                height 6px
                position absolute
                left 0
                top 10px
                border-radius 50%
