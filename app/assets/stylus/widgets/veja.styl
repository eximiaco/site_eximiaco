.shortcode-veja
    border-bottom 1px solid $gray-dark
    border-top 1px solid $gray-dark
    margin 20px 10px
    padding-left 10px
    padding-top 10px

    @media screen and ( min-width $screen-md )
        margin 40px

    @media screen and ( min-width $screen-lg )
        margin 40px 170px 40px 80px


    &__title
        font-size 22
        font-weight bold
        text-transform uppercase

    ol
    ul
        margin-bottom 10px
        margin-left -20px

        li
            color var( --color-primary )
            content '\2022'
